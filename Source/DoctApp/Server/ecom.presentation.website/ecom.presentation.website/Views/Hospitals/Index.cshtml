@model IEnumerable<ecom.presentation.website.Models.Hospital>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ConfigLayout .cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameEN)
        </th>
        <th>
            Likes
        </th>
        <th>
            Reviews
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.NameEN, "Details", new { id = item.ID }) 
            <address>
                @Html.DisplayFor(modelItem => item.Address)
                <p>@Html.DisplayFor(modelItem => item.ContactNumber) </p>
                <p>@Html.DisplayFor(modelItem => item.SecondNumber)</p>
                <p>@Html.DisplayFor(modelItem => item.CityLocation.NameEN)</p>                
                <p>@Html.DisplayFor(modelItem => item.Latitude), @Html.DisplayFor(modelItem => item.Longitude)</p>                
            </address>            
            @if (item.IsOpenAlways)
            {
                <i>24 * 7</i>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LikeCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReviewCount)
        </td>
        <td>
            @if (User.IsInRole("Admin"))
            {
             @Html.ActionLink("Edit", "Edit", new { id = item.ID }) 
             <br />
             @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            }
        </td>
    </tr>
}

</table>
