    Layout = "~/Views/Shared/_ConfigLayout .cshtml";
}

<h2></h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Doctor.NameEN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Review)
        </th>
